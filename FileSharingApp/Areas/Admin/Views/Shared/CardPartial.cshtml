@using System.Globalization
@model UserAdminViewModel

<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
              <div class="card bg-light d-flex flex-fill">
                <div class="card-header text-muted border-bottom-0">
                  Digital Strategist
                </div>
                <div class="card-body pt-0">
                  <div class="row">
                    <div class="col-7">
                      <h2 class="lead"><b>@Model.FirstName @Model.LastName</b></h2>
                      <p class="text-muted text-sm"><b>Email: </b> @Model.Email </p>
                     <p class="text-muted text-sm"><b>Registered: </b><span class="moment-date">@Model.CreatedDate.ToString("MM-dd-yyyy hh:mm:ss",new CultureInfo("en-us"))</span> </p>
                    </div>
                    <div class="col-5 text-center">
                      <img src="~/Admin/dist/img/user1-128x128.jpg" alt="user-avatar" class="img-circle img-fluid">
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <div class="text-right">
                      @if(!Model.IsBlocked){
                    <a asp-action="BlockUser" asp-controller="ManagingUsers" asp-route-id="@Model.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-sm btn-danger">
                     Block
                    </a>
                }
                else
                {
                     <a asp-action="UnBlockUser" asp-controller="ManagingUsers" asp-route-id="@Model.Id" asp-route-returnUrl="@Context.Request.Path" class="btn btn-sm btn-danger">
                     Un Block
                    </a>
                }
                <a href="#" class="btn btn-sm btn-primary">
                      <i class="fas fa-user"></i> View Profile
                    </a>
                  </div>
                </div>
              </div>
</div>
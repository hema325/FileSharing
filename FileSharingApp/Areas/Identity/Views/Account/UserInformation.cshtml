@model RegisterViewModel
@inject IViewLocalizer localizer

<h1>@localizer["User Information"]</h1>

<div class="container">
    <div class="mt-4 mb-4">
    <div class="row">
    <label asp-for="FirstName" class="col-2"></label>
    <span class="col-10"> @Model.FirstName</span>
    </div>
    <div class="row">
         <label asp-for="LastName" class="col-2"></label>
    <span class="col-10"> @Model.LastName</span>
    </div>
    <div class="row">
         <label asp-for="Email" class="col-2"></label>
    <span class="col-10"> @Model.Email</span>
    </div>
    <a asp-action="ManageAccount" class="btn btn-primary mt-4">@localizer["Manage Account"]</a>
    <a asp-action="DeleteAccount" class="btn btn-danger mt-4">@localizer["Delete Account"]</a>
    </div>
</div>


